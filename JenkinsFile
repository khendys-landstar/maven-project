pipeline {
	agent any
	
	stages {
		stage("Build") {
			steps {
				echo "Building ..."
				sh "mvn clean package"
			}
			post {
				success {
					echo "Now Archiving ..."
					archiveArtifacts artifacts: "**/target/*.war"
				}
			}
		}
		
		stage ("Deploy to Dev") {
			when {
				expression {
					currentBuild.result == null || currentBuild.result == "SUCCESS"
				}
			}
			steps {
				echo "Publishing ..."
				build job: 'deploy-to-dev'
			}
		}
	}
}